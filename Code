int Arm1Position = 1500;		//TIM2 Channel 2
int Arm2Position = 1500;		//TIM2 Channel 3
int GrabberPosition = 800;		//TIM3 Channel 1
int GrabberAnglePosition = 1700;//TIM3 Channel 2
int ArmRotatePosition = 1500;	//TIM2 Channel 4
