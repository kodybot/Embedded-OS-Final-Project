/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(LD2_GPIO_Port, LD2_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : B1_Pin */
  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : LD2_Pin */
  GPIO_InitStruct.Pin = LD2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(LD2_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI15_10_IRQn, 5, 0);
  HAL_NVIC_EnableIRQ(EXTI15_10_IRQn);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
void Servo_SetPulse_us(uint16_t pulse_us)		//Servo safety bounds, can not move outside of these
  {
    if (pulse_us < 500) pulse_us = 500;
    if (pulse_us > 2500) pulse_us = 2500;
    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, pulse_us);
  }





void ServoTask(void *argument)	//Task for controlling servos
{
    uint8_t cmd;


    if (HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_1) != HAL_OK) {		//Start the Timer 2 PWM
        Error_Handler();
    }
    if (HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_2) != HAL_OK) {		//Start the Timer 2 PWM
        Error_Handler();
    }
    if (HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_3) != HAL_OK) {		//Start the Timer 2 PWM
    	Error_Handler();
    }
    if (HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_4) != HAL_OK) {		//Start the Timer 2 PWM
    	Error_Handler();
    }
    if (HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_1) != HAL_OK) {		//Start the Timer 3 PWM
        Error_Handler();
    }
    if (HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_2) != HAL_OK) {		//Start the Timer 3 PWM
        Error_Handler();
    }

    Servo_SetPulse_us(1500);
    vTaskDelay(pdMS_TO_TICKS(500));


    for (;;) {
        if (xQueueReceive(ServoControlQueue, &cmd, portMAX_DELAY) == pdTRUE) {
            if (cmd == 'r') {
            	while(BasePosition >= 550){
            		BasePosition -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, BasePosition);
            	    vTaskDelay(pdMS_TO_TICKS(10));

            	}
            	while(Arm2Position >= 2000){		//Rotate Arm2 Up
            		Arm2Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm1Position >= 1400){		//Rotate Arm1 Down
            		Arm1Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}
            	if(GrabberPosition >= 700){
            		while(GrabberPosition >= 700){
            			GrabberPosition -= 5;
            			__HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            			vTaskDelay(pdMS_TO_TICKS(10));
            		}
            	}else{
            		while(GrabberPosition <= 1100){
            			GrabberPosition += 5;
            	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            	        vTaskDelay(pdMS_TO_TICKS(10));
            		}
            	}

            	while(Arm1Position <= 2400){		//Rotate Arm1 Up
            	  	Arm1Position += 5;
            	   	__HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm2Position <= 2500){		//Rotate Arm2 Down
            		Arm2Position += 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}



            } else if (cmd == 'l') {
            	while(BasePosition <= 2300){		//Rotate Base Left
            		BasePosition += 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, BasePosition);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm2Position >= 2000){		//Rotate Arm2 Up
            		Arm2Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm1Position >= 1400){		//Rotate Arm1 Down
            		Arm1Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	if(GrabberPosition >= 700){
            		while(GrabberPosition >= 700){
            			GrabberPosition -= 5;
            	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            	        vTaskDelay(pdMS_TO_TICKS(10));
            		}
            	 }else{
            		 while(GrabberPosition <= 1100){
            			 GrabberPosition += 5;
            			 __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            	         vTaskDelay(pdMS_TO_TICKS(10));
            		 }
            	 }



            	while(Arm1Position <= 2400){		//Rotate Arm1 Up
            		Arm1Position += 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm2Position <= 2500){		//Rotate Arm2 Down
            		Arm2Position += 5;
            		__HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}



            } else if (cmd == ' ') {
            	if(BasePosition >= 1500){				//Check if Base is rotated Left
            		while(BasePosition >= 1500){
            			BasePosition -= 5;
            			__HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, BasePosition);
            			vTaskDelay(pdMS_TO_TICKS(10));
            		}
            	}
            	if(BasePosition < 1500){				//Check if Base is rotated Right
            		while(BasePosition < 1500){
            			BasePosition += 5;
            	        __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_1, BasePosition);
            	        vTaskDelay(pdMS_TO_TICKS(10));
            		}
            	}

            	while(Arm2Position >= 2000){		//Rotate Arm2 Up
            		Arm2Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm1Position >= 1400){		//Rotate Arm1 Down
            	 	Arm1Position -= 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}


            	if(GrabberPosition >= 700){
            		while(GrabberPosition >= 700){
            			GrabberPosition -= 5;
            	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            	        vTaskDelay(pdMS_TO_TICKS(10));
            	    }
            	}else{
            		while(GrabberPosition <= 1100){
            			GrabberPosition += 5;
            	        __HAL_TIM_SET_COMPARE(&htim3, TIM_CHANNEL_1, GrabberPosition);
            	        vTaskDelay(pdMS_TO_TICKS(10));
            	    }
            	}



            	while(Arm1Position <= 2400){		//Rotate Arm1 Up
            		Arm1Position += 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_2, Arm1Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}

            	while(Arm2Position <= 2500){		//Rotate Arm2 Down
            		Arm2Position += 5;
            	    __HAL_TIM_SET_COMPARE(&htim2, TIM_CHANNEL_3, Arm2Position);
            	    vTaskDelay(pdMS_TO_TICKS(10));
            	}



            } else if (cmd == 'e') {
                /* emergency stop - set neutral or disable PWM */
				    /* Emergency stop: disable PWM outputs */
				    HAL_TIM_PWM_Stop(&htim2, TIM_CHANNEL_1);
				    HAL_TIM_PWM_Stop(&htim2, TIM_CHANNEL_2);
				    HAL_TIM_PWM_Stop(&htim2, TIM_CHANNEL_3);
				    HAL_TIM_PWM_Stop(&htim2, TIM_CHANNEL_4);
				    HAL_TIM_PWM_Stop(&htim3, TIM_CHANNEL_1);
				    HAL_TIM_PWM_Stop(&htim3, TIM_CHANNEL_2);

				    char str[] = "PWMs Off!\r\n\n";
				    HAL_UART_Transmit(&huart2, (uint8_t*)str, strlen(str), HAL_MAX_DELAY);
				}
            else if(cmd == 's'){
            	HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_1);
            	HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_2);
            	HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_3);
            	HAL_TIM_PWM_Start(&htim2, TIM_CHANNEL_4);
            	HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_1);
            	HAL_TIM_PWM_Start(&htim3, TIM_CHANNEL_2);


            	char str[] = "PWMs On!\r\n\n";
            	HAL_UART_Transmit(&huart2, (uint8_t*)str, strlen(str), HAL_MAX_DELAY);

            }


            }
            /* small pause to allow next command */
            vTaskDelay(pdMS_TO_TICKS(50));
        }
    }



void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
    BaseType_t xHigherPriorityTaskWoken = pdFALSE;

    /* re-arm receive first */
    HAL_UART_Receive_IT(huart, &Rx_data, 1);

    /* Echo for debug (safe to call HAL_UART_Transmit here because it blocks;
       if you want true non-blocking echo use a TX queue or send from a task) */
    if (Rx_data == 'r') {
        char str[] = "Received Right\r\n\n";
        HAL_UART_Transmit(huart, (uint8_t *)str, strlen(str), HAL_MAX_DELAY);
        xQueueSendFromISR(ServoControlQueue, &Rx_data, &xHigherPriorityTaskWoken);
    } else if (Rx_data == 'l') {
        char str2[] = "Received Left\r\n\n";
        HAL_UART_Transmit(huart, (uint8_t *)str2, strlen(str2), HAL_MAX_DELAY);
        xQueueSendFromISR(ServoControlQueue, &Rx_data, &xHigherPriorityTaskWoken);
    } else if (Rx_data == 'e') {
        char str3[] = "Emergency Stop!\r\n\n";
        HAL_UART_Transmit(huart, (uint8_t *)str3, strlen(str3), HAL_MAX_DELAY);
        xQueueSendToFrontFromISR(ServoControlQueue, &Rx_data, &xHigherPriorityTaskWoken);
    } else if (Rx_data == ' ') {
        char str4[] = "Received Center\r\n\n";
        HAL_UART_Transmit(huart, (uint8_t *)str4, strlen(str4), HAL_MAX_DELAY);
        xQueueSendFromISR(ServoControlQueue, &Rx_data, &xHigherPriorityTaskWoken);
    }else if(Rx_data == 's'){
    	char str4[] = "Starting PWMs\r\n\n";
    	HAL_UART_Transmit(huart, (uint8_t *)str4, strlen(str4), HAL_MAX_DELAY);
    	xQueueSendToFrontFromISR(ServoControlQueue, &Rx_data, &xHigherPriorityTaskWoken);
    }

    /* send the received byte to servo task (ISR-safe) */

    /* request a context switch if needed */
    portYIELD_FROM_ISR(xHigherPriorityTaskWoken);
}

/* USER CODE END 4 */

/* USER CODE BEGIN Header_StartDefaultTask */
/**
